{
  "$schema": "http://json-schema.org/draft-07/schema",
  "additionalProperties": false,
  "definitions": {
    "DependencyModel": {
      "additionalProperties": false,
      "properties": {
        "role": {
          "title": "Role",
          "type": "string"
        },
        "scm": {
          "enum": [
            "hg",
            "git"
          ],
          "title": "Scm",
          "type": "string"
        },
        "src": {
          "title": "Src",
          "type": "string"
        },
        "version": {
          "title": "Version",
          "type": "string"
        }
      },
      "required": [
        "role"
      ],
      "title": "DependencyModel",
      "type": "object"
    },
    "GalaxyInfoModel": {
      "additionalProperties": false,
      "properties": {
        "author": {
          "minLength": 2,
          "pattern": "[a-z0-9][a-z0-9_]+",
          "title": "Author",
          "type": "string"
        },
        "company": {
          "title": "Company",
          "type": "string"
        },
        "description": {
          "title": "Description",
          "type": "string"
        },
        "galaxy_tags": {
          "items": {
            "type": "string"
          },
          "title": "Galaxy Tags",
          "type": "array"
        },
        "license": {
          "title": "License",
          "type": "string"
        },
        "min_ansible_container_version": {
          "title": "Min Ansible Container Version",
          "type": "string"
        },
        "min_ansible_version": {
          "title": "Min Ansible Version",
          "type": "string"
        },
        "platforms": {
          "items": {
            "$ref": "#/definitions/PlatformModel"
          },
          "title": "Platforms",
          "type": "array"
        },
        "role_name": {
          "minLength": 2,
          "pattern": "[a-z][a-z0-9_]+",
          "title": "Role Name",
          "type": "string"
        }
      },
      "required": [
        "description",
        "company",
        "license",
        "min_ansible_version",
        "platforms",
        "galaxy_tags"
      ],
      "title": "GalaxyInfoModel",
      "type": "object"
    },
    "PlatformModel": {
      "properties": {
        "name": {
          "title": "Name",
          "type": "string"
        },
        "versions": {
          "items": {
            "type": "string"
          },
          "title": "Versions",
          "type": "array"
        }
      },
      "required": [
        "name",
        "versions"
      ],
      "title": "PlatformModel",
      "type": "object"
    }
  },
  "properties": {
    "allow_duplicates": {
      "title": "Allow Duplicates",
      "type": "boolean"
    },
    "dependencies": {
      "items": {
        "$ref": "#/definitions/DependencyModel"
      },
      "title": "Dependencies",
      "type": "array"
    },
    "galaxy_info": {
      "$ref": "#/definitions/GalaxyInfoModel"
    }
  },
  "required": [
    "galaxy_info",
    "dependencies"
  ],
  "title": "Ansible Meta Schema",
  "type": "object"
}
