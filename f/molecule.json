{
  "$schema": "http://json-schema.org/draft-07/schema",
  "additionalProperties": false,
  "definitions": {
    "ContainerRegistryModel": {
      "additionalProperties": false,
      "properties": {
        "url": {
          "title": "Url",
          "type": "string"
        }
      },
      "required": [
        "url"
      ],
      "title": "ContainerRegistryModel",
      "type": "object"
    },
    "MoleculeDriverModel": {
      "additionalProperties": false,
      "properties": {
        "name": {
          "anyOf": [
            {
              "const": "azure",
              "type": "string"
            },
            {
              "const": "ec2",
              "type": "string"
            },
            {
              "const": "delegated",
              "type": "string"
            },
            {
              "const": "docker",
              "type": "string"
            },
            {
              "const": "containers",
              "type": "string"
            },
            {
              "const": "openstack",
              "type": "string"
            },
            {
              "const": "podman",
              "type": "string"
            },
            {
              "const": "vagrant",
              "type": "string"
            },
            {
              "const": "digitalocean",
              "type": "string"
            },
            {
              "const": "gce",
              "type": "string"
            },
            {
              "const": "libvirt",
              "type": "string"
            },
            {
              "const": "lxd",
              "type": "string"
            }
          ],
          "title": "Name"
        },
        "options": {
          "$ref": "#/definitions/MoleculeDriverOptionsModel"
        }
      },
      "title": "MoleculeDriverModel",
      "type": "object"
    },
    "MoleculeDriverOptionsModel": {
      "additionalProperties": false,
      "properties": {
        "ansible_connection_options": {
          "additionalProperties": {
            "type": "string"
          },
          "title": "Ansible Connection Options",
          "type": "object"
        },
        "login_cmd_template": {
          "title": "Login Cmd Template",
          "type": "string"
        },
        "managed": {
          "title": "Managed",
          "type": "boolean"
        }
      },
      "title": "MoleculeDriverOptionsModel",
      "type": "object"
    },
    "MoleculePlatformModel": {
      "additionalProperties": false,
      "properties": {
        "dockerfile": {
          "title": "Dockerfile",
          "type": "string"
        },
        "environment": {
          "additionalProperties": {
            "type": "string"
          },
          "title": "Environment",
          "type": "object"
        },
        "hostname": {
          "title": "Hostname",
          "type": "string"
        },
        "image": {
          "title": "Image",
          "type": "string"
        },
        "name": {
          "title": "Name",
          "type": "string"
        },
        "pkg_extras": {
          "title": "Pkg Extras",
          "type": "string"
        },
        "privileged": {
          "title": "Privileged",
          "type": "boolean"
        },
        "registry": {
          "$ref": "#/definitions/ContainerRegistryModel"
        },
        "ulimits": {
          "items": {
            "type": "string"
          },
          "title": "Ulimits",
          "type": "array"
        },
        "volumes": {
          "items": {
            "type": "string"
          },
          "title": "Volumes",
          "type": "array"
        }
      },
      "required": [
        "name"
      ],
      "title": "MoleculePlatformModel",
      "type": "object"
    },
    "ProvisionerConfigOptionsDefaultsModel": {
      "additionalProperties": false,
      "properties": {
        "ansible_managed": {
          "default": "Ansible managed: Do NOT edit this file manually!",
          "title": "Ansible Managed",
          "type": "string"
        },
        "display_failed_stderr": {
          "default": true,
          "title": "Display Failed Stderr",
          "type": "boolean"
        },
        "fact_caching": {
          "title": "Fact Caching",
          "type": "string"
        },
        "fact_caching_connection": {
          "title": "Fact Caching Connection",
          "type": "string"
        },
        "forks": {
          "default": 50,
          "title": "Forks",
          "type": "integer"
        },
        "host_key_checking": {
          "default": false,
          "title": "Host Key Checking",
          "type": "boolean"
        },
        "interpreter_python": {
          "default": "auto_silent",
          "description": "See https://docs.ansible.com/ansible/devel/reference_appendices/interpreter_discovery.html",
          "title": "Interpreter Python",
          "type": "string"
        },
        "nocows": {
          "default": 1,
          "title": "Nocows",
          "type": "integer"
        },
        "retry_files_enabled": {
          "default": false,
          "title": "Retry Files Enabled",
          "type": "boolean"
        }
      },
      "title": "ProvisionerConfigOptionsDefaultsModel",
      "type": "object"
    },
    "ProvisionerConfigOptionsModel": {
      "additionalProperties": false,
      "properties": {
        "defaults": {
          "$ref": "#/definitions/ProvisionerConfigOptionsDefaultsModel"
        },
        "ssh_connection": {
          "$ref": "#/definitions/ProvisionerConfigOptionsSshConnectionModel"
        }
      },
      "title": "ProvisionerConfigOptionsModel",
      "type": "object"
    },
    "ProvisionerConfigOptionsSshConnectionModel": {
      "additionalProperties": false,
      "properties": {
        "control_path": {
          "default": "%(directory)s/%%h-%%p-%%r",
          "title": "Control Path",
          "type": "string"
        },
        "scp_if_ssh": {
          "default": true,
          "title": "Scp If Ssh",
          "type": "boolean"
        }
      },
      "title": "ProvisionerConfigOptionsSshConnectionModel",
      "type": "object"
    },
    "ProvisionerModel": {
      "additionalProperties": false,
      "properties": {
        "config_options": {
          "$ref": "#/definitions/ProvisionerConfigOptionsModel"
        },
        "env": {
          "title": "Env",
          "type": "object"
        },
        "inventory": {
          "title": "Inventory",
          "type": "object"
        },
        "log": {
          "title": "Log",
          "type": "boolean"
        },
        "name": {
          "const": "ansible",
          "title": "Name",
          "type": "string"
        }
      },
      "title": "ProvisionerModel",
      "type": "object"
    },
    "VerifierModel": {
      "additionalProperties": false,
      "properties": {
        "name": {
          "anyOf": [
            {
              "const": "ansible",
              "type": "string"
            },
            {
              "const": "goss",
              "type": "string"
            },
            {
              "const": "inspec",
              "type": "string"
            },
            {
              "const": "testinfra",
              "type": "string"
            }
          ],
          "default": "ansible",
          "title": "Name"
        }
      },
      "title": "VerifierModel",
      "type": "object"
    }
  },
  "properties": {
    "driver": {
      "$ref": "#/definitions/MoleculeDriverModel"
    },
    "log": {
      "default": true,
      "title": "Log",
      "type": "boolean"
    },
    "platforms": {
      "items": {
        "$ref": "#/definitions/MoleculePlatformModel"
      },
      "title": "Platforms",
      "type": "array"
    },
    "provisioner": {
      "$ref": "#/definitions/ProvisionerModel"
    },
    "scenario": {
      "additionalProperties": {
        "items": {
          "anyOf": [
            {
              "const": "check",
              "type": "string"
            },
            {
              "const": "cleanup",
              "type": "string"
            },
            {
              "const": "converge",
              "type": "string"
            },
            {
              "const": "create",
              "type": "string"
            },
            {
              "const": "dependency",
              "type": "string"
            },
            {
              "const": "destroy",
              "type": "string"
            },
            {
              "const": "lint",
              "type": "string"
            },
            {
              "const": "prepare",
              "type": "string"
            },
            {
              "const": "side_effect",
              "type": "string"
            },
            {
              "const": "syntax",
              "type": "string"
            },
            {
              "const": "test",
              "type": "string"
            },
            {
              "const": "verify",
              "type": "string"
            }
          ],
          "title": "  Scenario"
        },
        "type": "array"
      },
      "title": "Scenario",
      "type": "object"
    },
    "verifier": {
      "$ref": "#/definitions/VerifierModel"
    }
  },
  "required": [
    "driver",
    "platforms",
    "scenario"
  ],
  "title": "Molecule Scenario Schema",
  "type": "object"
}
